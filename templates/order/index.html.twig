{% extends 'base.html.twig' %}

{% block title %}{{ tituloAlmacen }} - GreenHarvest{% endblock %}

{% block body %}
<div class="container py-5">
  <!-- Encabezado -->
  <div class="text-center mb-5">
    <h1 class="fw-bold text-success">{{ tituloAlmacen }}</h1>
    <p class="text-muted">Gestión y control de los pedidos en GreenHarvest</p>
  </div>

  {% if orders is empty %}
    <div class="alert alert-info shadow-sm rounded-4">
      {% if find_order %}
        No se encontraron pedidos que coincidan con 
        <strong>"{{ find_order }}"</strong>.
        <a href="{{ path('app_order_index') }}" class="alert-link">Ver todos los pedidos</a>
      {% else %}
        No hay pedidos realizados todavía.
      {% endif %}
    </div>
  {% else %}
    <div class="card border-0 shadow rounded-4">
      <div class="card-body p-4">
        <div class="table-responsive">
          <table class="table table-hover align-middle mb-0">
            <thead class="table-success">
              <tr>
                <th scope="col">📦 N.º Pedido</th>
                <th scope="col">👤 Usuario</th>
                <th scope="col">📅 Fecha</th>
                <th scope="col">🚦 Estado</th>
                <th scope="col">🛒 Items</th>
                <th scope="col" class="text-center">⚙️ Acciones</th>
              </tr>
            </thead>
            <tbody>
              {% for order in orders %}
                <tr>
                  <td class="fw-bold text-success">{{ order.id }}</td>
                  <td>{{ order.user.email }}</td>
                  <td>{{ order.createdAt|date('d/m/Y H:i') }}</td>
                  <td>
                    <span class="badge bg-primary px-3 py-2">
                      {{ order.status.name }}
                    </span>
                  </td>
                  <td class="text-center">{{ order.items|length }}</td>
                  <td class="text-center">
                    {% if is_granted('ROLE_PICKER') %}
                      <a href="{{ path('app_order_show_store', {id: order.id}) }}"
                         class="btn btn-sm btn-outline-success me-2">
                        <i class="bi bi-eye"></i> Ver
                      </a>
                      <a href="{{ path('app_order_show_store', {id: order.id}) }}"
                         class="btn btn-sm btn-success">
                        <i class="bi bi-box-seam"></i> Preparar
                      </a>
                    {% else %}
                      <a href="{{ path('app_order_show', {id: order.id}) }}"
                         class="btn btn-sm btn-outline-success">
                        <i class="bi bi-info-circle"></i> Detalle
                      </a>
                    {% endif %}
                  </td>
                </tr>
              {% else %}
                <tr>
                  <td colspan="6" class="text-center text-muted">
                    No hay pedidos en este momento.
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Paginación -->
    <div class="mt-4">
      <nav aria-label="Page navigation">
        <div class="d-flex justify-content-center">
          {{ knp_pagination_render(orders, '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig', {
            'prev_message': '<i class="bi bi-arrow-left"></i> Anterior',
            'next_message': 'Siguiente <i class="bi bi-arrow-right"></i>'
          }) }}
        </div>
      </nav>
    </div>
  {% endif %}
</div>
{% endblock %}
