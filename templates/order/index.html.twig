{% extends 'base.html.twig' %}

{% block title %}{{ tituloAlmacen }} - GreenHarvest{% endblock %}

{% block body %}
<div class="">
  <!-- Encabezado -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2 fw-bold text-success mb-0">{{ tituloAlmacen }}</h1> 
  </div>
  <!-- Buscador por usuario o pedido -->
   <div class="d-flex justify-content-between align-items-center mb-4">
    <form method="get" action="{{ path('app_order_index') }}" class="mb-2">
        <div class="input-group">
         
          <input type="text" name="find_order" 
                value="{{ find_order|default('') }}" 
                class="form-control" 
                placeholder="Por usuario, ID o estado...">
          <button type="submit" class="btn btn-outline-success rounded-0">
          <i class="bi bi-search"></i> Buscar
    </button>
        </div>
    </form>

  </div>


  {% if orders is empty %}
    <div class="alert alert-info shadow-sm rounded-4">
      {% if find_order %}
        No se encontraron pedidos que coincidan con 
        <strong>"{{ find_order }}"</strong>.
        <a href="{{ path('app_order_index') }}" class="alert-link">Ver todos los pedidos</a>
      {% else %}
        No hay pedidos realizados todavía.
      {% endif %}
    </div>
  {% else %}
    <div class="card border-0 rounded-0">
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-hover align-middle mb-0">
            <thead class="table-success">
              <tr>
                <th scope="col"> N.º Pedido</th>
                <th scope="col"> Usuario</th>
                <th scope="col"> Fecha</th>
                <th scope="col"> Estado</th>
                <th scope="col"> Items</th>
                <th scope="col" class="text-center"> Acciones</th>
              </tr>
            </thead>
            <tbody>
              {% for order in orders %}
                <tr>
                  <td >{{ order.id }}</td>
                  <td>{{ order.user.email }}</td>
                  <td>{{ order.createdAt|date('d/m/Y H:i') }}</td>
                  <td>
                    <span class="badge bg-secondary px-3 py-2">
                      {{ order.status.name }}
                    </span>
                  </td>
                  <td class="text-center">{{ order.items|length }}</td>

                  <td class="text-center">
                    <div class="btn-group dropup" role="group">
                        <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                              +
                        </button>
                        <ul class="dropdown-menu">   
                           {% if (is_granted('ROLE_PICKER') )  %}   
                            <li><a class="dropdown-item text-muted" href="{{ path('app_order_show_store', {id: order.id}) }}" ><i class="bi bi-eye"></i> Ver</a></li>
                            <li><a class="dropdown-item text-muted" href="{{ path('app_order_show_store', {id: order.id}) }}" ><i class="bi bi-eye"></i> Preparar</a></li>
                            {% else %}
                               <li><a class="dropdown-item text-muted" href="{{ path('app_order_show', {id: order.id}) }}" ><i class="bi bi-eye"></i> Ver</a></li>
                            {% endif %}
                        </ul>
                      </div>
                    </td>
                </tr>
              {% else %}
                <tr>
                  <td colspan="6" class="text-center text-muted">
                    No hay pedidos en este momento.
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Paginación -->
    <div class="mt-4">
      <nav aria-label="Page navigation">
        <div class="d-flex justify-content-center">
        {{ knp_pagination_render(orders, '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig') }}
        </div>
      </nav>
    </div>
  {% endif %}
</div>
{% endblock %}
