{% if orders is empty %}
    <div class="alert alert-info shadow-sm rounded-4 text-center">
        No hay pedidos que coincidan con tu búsqueda.
    </div>
{% else %}
<div class="card border-0 rounded-4">
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover align-middle mb-0">
        <thead class="table-success">
          <tr>
            <th>N.º Pedido</th>
            <th>Usuario</th>
            <th>Fecha</th>
            <th>Estado</th>
            <th>Items</th>
            <th class="text-center">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {% for order in orders %}
            <tr>
              <td>{{ order.id }}</td>
              <td>{{ order.user.email }}</td>
              <td>{{ order.createdAt|date('d/m/Y H:i') }}</td>
              <td><span class="badge bg-secondary px-3 py-2">{{ order.status.name }}</span></td>
              <td class="text-center">{{ order.items|length }}</td>
              <td class="text-center">
                <a href="{{ path('app_order_show_store', {id: order.id}) }}" class="btn btn-sm btn-link-secondary">
                    <i class="bi bi-eye"></i> Ver
                </a>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="mt-4">
  <nav aria-label="Page navigation">
    <div class="d-flex justify-content-center">
      {{ knp_pagination_render(orders, '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig') }}
    </div>
  </nav>
</div>
{% endif %}
