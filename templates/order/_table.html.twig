{% if orders is empty %}
    <div class="alert alert-info shadow-sm rounded-0 text-center">
        No hay pedidos que coincidan con tu búsqueda.
    </div>
{% else %}
<div class="card border-0 rounded-4">
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover align-middle mb-0">
        <thead class="">
          <tr>
            <th>N.º PEDIDO</th>
            <th>USUARIO</th>
            <th>FECHA</th>
            <th>ESTADO</th>
            <th>TOTAL PRODUCTOS</th>
            <th class="text-center">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {% for order in orders %}
            <tr>
              <td>{{ order.id }}</td>
              <td>{{ order.user.email }}</td>
              <td>{{ order.createdAt|date('d/m/Y H:i' , 'Europe/Madrid') }}</td>
              <td><span class="badge bg-secondary px-3 py-2">{{ order.status.name }}</span></td>
              <td class="text-center">{{ order.items|length }}</td>
 
               <td class="text-center">
                        <div class="btn-group dropup">
                            <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">+</button>
                            <ul class="dropdown-menu">

                                {% if is_granted('ROLE_USER') and not is_granted('ROLE_ADMIN') and not is_granted('ROLE_PICKER') %}
                                    <li><a href="{{ path('app_order_show_store', {id: order.id}) }}" class="btn btn-sm btn-link-secondary">
                                    <i class="bi bi-eye"></i> Ver
                                    </a></li>
                                {% else %}
                                      <li><a href="{{ path('app_order_show_store', {id: order.id}) }}" class="btn btn-sm btn-link-secondary">
                                          <i class="bi bi-eye"></i> Ver
                                          </a></li>
                                     <li> <a href="{{ path('app_order_show_store', {id: order.id}) }}" class="btn btn-sm btn-link-secondary">
                                      <i class="bi bi-box-seam"></i> Preparar
                                      </a></li>
                                    <li> <a href="{{ path('app_order_show_store', {id: order.id}) }}" class="btn btn-sm btn-link-secondary">
                                      <i class="bi bi-truck"></i> Enviar
                                    </a></li>
                                {% endif %}
                                
                             
                                
                            </ul>
                        </div>
                    </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="mt-4">
  <nav aria-label="Page navigation">
    <div class="d-flex justify-content-center">
      {{ knp_pagination_render(orders, '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig') }}
    </div>
  </nav>
</div>
{% endif %}
