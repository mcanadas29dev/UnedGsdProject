{% extends 'base.html.twig' %}

{% block title %}Iniciar sesión - Green Harvest{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow rounded-4">
                <div class="card-body p-4">

                    <!-- Encabezado -->
                    <div class="text-center mb-4">
                        <h1 class="fw-bold text-success"> Iniciar sesión</h1>
                        <p class="text-muted">Accede a tu cuenta para continuar</p>
                    </div>

                    <!-- Mensajes de error -->
                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3 text-center">
                            Ya estás conectado como <strong>{{ app.user.userIdentifier }}</strong>,
                            <a href="{{ path('app_logout') }}" class="text-success">Cerrar sesión</a>
                        </div>
                    {% endif %}

                    <!-- Formulario -->
                    <form method="post">
                        <div class="mb-3">
                            <label for="username" class="form-label">Correo electrónico</label>
                            <input type="email" 
                                   value="{{ last_username }}" 
                                   name="_username" 
                                   id="username" 
                                   class="form-control rounded-3" 
                                   autocomplete="email" 
                                   required autofocus>
                        </div>
 
                        <div class="mb-3">
                            <label for="password" class="form-label">Contraseña</label>
                            <input type="password" 
                                   name="_password" 
                                   id="password" 
                                   class="form-control rounded-3" 
                                   autocomplete="current-password" 
                                   required>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <!-- Botón -->
                        <div class="d-grid">
                            <button class="btn btn-success btn-lg rounded-3" type="submit">
                                <i class="bi bi-box-arrow-in-right"></i> Entrar
                            </button>
                        </div>
                    </form>

                    <!-- Registro -->
                    <div class="mt-4 text-center">
                        <small class="text-muted">¿No tienes cuenta?</small><br>
                        <a href="{{ path('app_register') }}" class="btn btn-outline-success btn-sm rounded-3 mt-2">
                            <i class="bi bi-person-plus"></i> Regístrate
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
