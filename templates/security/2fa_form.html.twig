{% extends 'base.html.twig' %}

{% block title %}Verificación en dos pasos - Green Harvest{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow rounded-4">
                <div class="card-body p-4">

                    <!-- Encabezado -->
                    <div class="text-center mb-4">
                        <h1 class="fw-bold text-success">🔑 Verificación en dos pasos</h1>
                        <p class="text-muted">
                            Introduce el código generado por tu aplicación de autenticación (Google Authenticator, Authy, etc.)
                            o utiliza un <strong>código de respaldo</strong>.
                        </p>
                    </div>

                    <!-- Formulario 2FA -->
                    <form action="{{ path('2fa_login_check') }}" method="post">
                        <div class="mb-3">
                            <label for="_auth_code" class="form-label">Código de autenticación</label>
                            <input type="text"
                                   id="_auth_code"
                                   name="_auth_code"
                                   class="form-control rounded-3"
                                   autocomplete="one-time-code"
                                   required autofocus>
                        </div>

                        {% if error is defined and error %}
                            <div class="alert alert-danger">
                                {{ error|trans }}
                            </div>
                        {% endif %}

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-success btn-lg rounded-3">
                                <i class="bi bi-shield-lock"></i> Verificar
                            </button>
                        </div>
                    </form>

                    <!-- Opción de Backup Codes -->
                    <div class="mt-4 text-center">
                        <small class="text-muted">
                            ¿Perdiste el acceso a tu aplicación?
                        </small><br>
                        <p class="mt-2">
                            Usa uno de tus <strong>códigos de respaldo</strong>.
                        </p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
