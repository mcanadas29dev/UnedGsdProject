{% extends 'base.html.twig' %}

{% block title %}{{ 'home.title'|trans }}{% endblock %}

{% block body %}
<div class="container py-5">

  <!-- Hero -->
  <div class="text-center mb-5">
    <h1 class="fw-bold text-success">ðŸŒ¿ {{ 'home.hero.title'|trans }}</h1>
    <p class="lead text-muted">
      {{ 'home.hero.subtitle'|trans }}
    </p>
    <a href="{{ path('app_tienda') }}" class="btn btn-success btn-lg mt-3">
      <i class="bi bi-cart"></i> {{ 'home.hero.button'|trans }}
    </a>
  </div>

  <!-- Banner con imagen -->
  <div class="row align-items-center mb-5">
    <div class="col-md-6">
      <img src="{{ asset('images/cover.png') }}" class="img-fluid rounded-4 shadow" alt="Productos EcolÃ³gicos"/>
    </div>
    <div class="col-md-6">
      <h3 class="text-success">{{ 'home.promise.title'|trans }}</h3>
      <p>{{ 'home.promise.text'|trans }}</p>
    </div>
  </div>

  <!-- SecciÃ³n de categorÃ­as -->
  <div class="text-center mb-5">
    <h3 class="text-success">{{ 'home.categories.title'|trans }}</h3>
    <p class="text-muted">{{ 'home.categories.subtitle'|trans }}</p>
  </div>
  <div class="row text-center mb-5">
    <div class="col-md-4 mb-4">
      <div class="card border-0 shadow h-100 rounded-4">
        <div class="card-body p-4">
          <i class="bi bi-basket text-success display-5 mb-3"></i>
          <h4 class="fw-bold text-muted">
          <a href="{{ path('secciones_index') }}" class="text-muted"> {{ 'home.categories.fruits'|trans }}</a>
         </h4>
          <p class="text-muted">{{ 'home.categories.fruits_text'|trans }}</p>
        </div>
      </div>
    </div>
    <div class="col-md-4 mb-4">
      <div class="card border-0 shadow h-100 rounded-4">
        <div class="card-body p-4">
          <i class="bi bi-egg-fried text-success display-5 mb-3"></i>
          <h4 class="fw-bold">{{ 'home.categories.vegetables'|trans }}</h4>
          <p class="text-muted">{{ 'home.categories.vegetables_text'|trans }}</p>
        </div>
      </div>
    </div>
    <div class="col-md-4 mb-4">
      <div class="card border-0 shadow h-100 rounded-4">
        <div class="card-body p-4">
          <i class="bi bi-flower1 text-success display-5 mb-3"></i>
          <h4 class="fw-bold">{{ 'home.categories.others'|trans }}</h4>
          <p class="text-muted">{{ 'home.categories.others_text'|trans }}</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Productos destacados -->
<div class="text-center mb-5">
  <h3 class="text-success">{{ 'home.featured.title'|trans }}</h3>
  <p class="text-muted">{{ 'home.featured.subtitle'|trans }}</p>
</div>

<div class="row text-center">
  {% for product in products|slice(0,3) %}
    <div class="col-md-4 mb-4 d-flex">
      <div class="card border-0 shadow h-100 rounded-4 w-100 d-flex flex-column">
        
        <!-- Imagen con tamaÃ±o uniforme -->
        <div class="ratio ratio-4x3">
          <img src="{{ asset('images/productos/' ~ product.imageName) }}" 
               class="card-img-top rounded-top-4" 
               alt="{{ product.imageName }}"
               style="object-fit: cover; height: 100%; width: 100%;">
        </div>

        <!-- Contenido -->
        <div class="card-body d-flex flex-column justify-content-between text-center">
          <div>
            <h5 class="card-title fw-bold mb-2">{{ product.name }}</h5>
            <p class="card-text text-muted">{{ product.description|slice(0,60) ~ '...' }}</p>
          </div>

          <!-- Precio y botÃ³n alineados -->
          <div class="d-flex justify-content-between align-items-center mt-3">
            <strong class="h5 text-primary mb-0">{{ product.price }} â‚¬</strong>
            <a href="{{ path('cart_add', {id: product.id}) }}" class="btn btn-outline-success rounded-1">
              <i class="bi bi-cart-plus"></i> {{ 'home.featured.add_to_cart'|trans }}
            </a>
          </div>
        </div>
      </div>
    </div>
  {% else %}
    <p class="text-muted">{{ 'home.featured.empty'|trans }}</p>
  {% endfor %}
</div>

</div>
{% endblock %}
