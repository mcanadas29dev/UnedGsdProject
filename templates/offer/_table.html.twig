{% if offers is empty %}
    <div class="alert alert-info shadow-sm rounded-0 text-center">
        No hay ofertas que coincidan con tu búsqueda.
    </div>
{% else %}
<div class="card border-0 rounded-4">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-success text-success">
                    <tr>
                        <th>ID</th>
                        <th>Producto</th>
                        <th>Precio Oferta</th>
                        <th>Inicio</th>
                        <th>Fin</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                {% for offer in offers %}
                    <tr>
                        <td>{{ offer.id }}</td>
                        <td>{{ offer.product.name }}</td>
                        <td>{{ offer.offerPrice }} €</td>
                        <td>{{ offer.startDate|date('d/m/Y') }}</td>
                        <td>{{ offer.endDate|date('d/m/Y') }}</td>
                        <td class="text-center">
                            <div class="btn-group dropup" role="group">
                                <div class="dropdown dropstart">
                                    <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                        +
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item text-muted" href="{{ path('offer_show', {id: offer.id}) }}"><i class="bi bi-eye"></i> Ver</a></li>
                                        <li><a class="dropdown-item text-muted" href="{{ path('offer_edit', {id: offer.id}) }}"><i class="bi bi-pencil-square"></i> Editar</a></li>
                                        {{ include('offer/_delete_form.html.twig', {'id': offer.id}) }}
                                    </ul>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center text-muted">
                            No hay ofertas disponibles.
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<nav aria-label="Page navigation" class="mt-4">
    <div class="d-flex justify-content-center">
        {{ knp_pagination_render(offers, '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig') }}
    </div>
</nav>
{% endif %}
