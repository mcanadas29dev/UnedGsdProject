{% extends 'base.html.twig' %}

{% block title %}Ofertas{% endblock %}

{% block body %}
<h1 class="mb-4">Listado de Ofertas</h1>

<a href="{{ path('offer_new') }}" class="btn btn-outline-primary btn-sm mb-3">
    <i class="bi bi-plus-circle"></i> Nueva Oferta
</a>

<table class="table table-hover table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Producto</th>
            <th>Precio Oferta</th>
            <th>Inicio</th>
            <th>Fin</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        {% for offer in offers %}
            <tr>
                <td>{{ offer.id }}</td>
                <td>{{ offer.product.name }}</td>
                <td>{{ offer.offerPrice }} €</td>
                <td>{{ offer.startDate|date('d/m/Y') }}</td>
                <td>{{ offer.endDate|date('d/m/Y') }}</td>
                <td class="text-center">
                    <a href="{{ path('offer_show', {id: offer.id}) }}" class="btn btn-sm btn-outline-primary">Ver</a>
                    <a href="{{ path('offer_edit', {id: offer.id}) }}" class="btn btn-sm btn-outline-primary">Editar</a>
                    <form method="post" action="{{ path('offer_delete', {id: offer.id}) }}" style="display:inline-block;" onsubmit="return confirm('¿Seguro que quieres eliminar esta oferta?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ offer.id) }}">
                        <button class="btn btn-sm btn-outline-primary">Eliminar</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">No hay ofertas registradas.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
