{# new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Nueva Oferta - GreenHarvest{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow border-0 rounded-1">
                <div class="card-body p-4">
                    
                    <h1 class="h4 text-success fw-bold mb-4">âž•  Crear Nueva Oferta</h1>
                    
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.product, 'Producto', {'label_attr': {'class': 'form-label fw-bold text-success'}}) }}
                            {{ form_widget(form.product, {'attr': {'class': 'form-select'}}) }}
                            {{ form_errors(form.product) }}
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.offerPrice, 'Precio de Oferta', {'label_attr': {'class': 'form-label fw-bold text-success'}}) }}
                            {{ form_widget(form.offerPrice, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.offerPrice) }}
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.startDate, 'Fecha de Inicio', {'label_attr': {'class': 'form-label fw-bold text-success'}}) }}
                            {{ form_widget(form.startDate, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.startDate) }}
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.endDate, 'Fecha de Fin', {'label_attr': {'class': 'form-label fw-bold text-success'}}) }}
                            {{ form_widget(form.endDate, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.endDate) }}
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <button class="btn btn-outline-success rounded-1">
                                <i class="bi bi-check-circle"></i> Nueva Oferta
                            </button>
                            <a href="{{ path('offer_index_admin') }}" class="btn btn-outline-secondary rounded-1">
                            <i class="bi bi-arrow-left"></i> Volver
                        </a>
                        </div>
                    {{ form_end(form) }}
                    
                  
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
