{% extends 'base.html.twig' %}

{% block title %}Crear Nueva Oferta{% endblock %}

{% block body %}
<h1 class="mb-4">Crear Nueva Oferta</h1>

{{ form_start(form) }}
    {{ form_row(form.product) }}
    {{ form_row(form.offerPrice) }}
    {{ form_row(form.startDate) }}
    {{ form_row(form.endDate) }}
    <button class="btn btn-outline-success mt-3">Guardar</button>
{{ form_end(form) }}

<a href="{{ path('offer_index_admin') }}" class="btn btn-link mt-3">Volver al listado</a>
{% endblock %}
