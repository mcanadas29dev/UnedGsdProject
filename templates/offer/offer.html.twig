{% extends 'base.html.twig' %}

{% block title %}Ofertas activas{% endblock %}

{% block body %}
<h1 class="mb-4 text-center">Ofertas destacadas</h1>

{% if offers|length == 0 %}
    <div class="alert alert-info text-center">No hay ofertas activas en este momento.</div>
{% else %}
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
    {% for offer in offers %}
        <div class="col">
            <div class="card h-100 shadow-sm border-success">
                {% if offer.product.imageName %}
                    <img src="{{ asset('images/productos/' ~ offer.product.imageName) }}" class="card-img-top" alt="{{ offer.product.name }}">
                {% else %}
                    <img src="{{ asset('images/default-product.jpg') }}" class="card-img-top" alt="Sin imagen">
                {% endif %}

                <div class="card-body d-flex flex-column">
                    <h4 class="card-title text-center">{{ offer.product.name }}</h4>
                    <p class="card-text text-muted mb-1 text-center"><h4 class="text-center">
                        <del>{{ offer.product.price|number_format(2) }} €</del>
                        <strong class="text-success">{{ offer.offerPrice|number_format(2) }} €</h4></strong>
                    </p>
                    <p class="text-secondary small mt-auto">
                        <i class="bi bi-clock-history"></i>
                        Hasta el {{ offer.endDate|date('d/m/Y H:i') }}
                    </p>
                    <a href="{{ path('product_show', {'id': offer.product.id}) }}" class="btn btn-outline-success mt-2">
                        Ver producto
                    </a>
                     <form action="{{ path('cart_app_cart_add', {id: offer.product.id}) }}" method="post" class="mt-2">
                            <input type="hidden" name="quantity" value="1" />
                            <button class="btn btn-sm btn-warning w-100" type="submit">
                                <i class="bi bi-cart-plus"></i> Añadir al carrito
                            </button>
                    </form>
                </div>
            </div>
        </div>
    {% endfor %}
 
</div>
{% endif %}
{% endblock %}
