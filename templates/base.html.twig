                <i class="bi bi-list"></i>
            </button>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu" 
                aria-controls="navbarMenu" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarMenu"> 
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link text-secondary" href="{{ path('app_home') }}">Green Harvest</a></li>
                    <li class="nav-item"><a class="nav-link text-secondary" href="{{ path('app_tienda') }}">Tienda</a></li>
                    <li class="nav-item"><a class="nav-link text-secondary" href="{{ path('app_best_selling') }}">Lo M√°s Vendido</a></li>
                    <li class="nav-item"><a class="nav-link text-secondary" href="{{ path('app_news') }}">√öltimas novedades</a></li>
                    <li class="nav-item"><a class="nav-link text-secondary" href="{{ path('offer_index') }}">Ofertas</a></li>
                                        {% if is_granted('ROLE_USER') and not is_granted('ROLE_ADMIN') and not is_granted('ROLE_PICKER') %}
                        <li class="nav-item"><a class="nav-link text-secondary" href="{{ path('app_order_user') }}">Pedidos</a></li>
                    {% endif %}

                    {% if is_granted('ROLE_PICKER') %}
                        <li class="nav-item"><a class="nav-link text-secondary" href="{{ path('app_order_storage') }}">Gesti√≥n Almac√©n</a></li>
                    {% endif %}

                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-secondary" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Administraci√≥n
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                <li><a class="dropdown-item" href="{{ path('app_user_index') }}">Usuarios</a></li>
                                <li><a class="dropdown-item" href="{{ path('app_order_index') }}">Pedidos</a></li>
                                <li><a class="dropdown-item" href="{{ path('product_index') }}">Productos</a></li>
                                <li><a class="dropdown-item" href="{{ path('categories_list') }}">Categor√≠as</a></li>
                                <li><a class="dropdown-item" href="{{ path('offer_index_admin') }}">Ofertas</a></li>
                                <!-- Agrega m√°s enlaces seg√∫n necesites -->
                            </ul>
                        </li>
                    {% endif %}
                </ul>
            </div>

            <div class="d-flex ms-auto">
                {% if app.user %}
                    
                    <a href="{{ path('app_logout') }}" class="btn btn-outline-success me-3" title={{ app.user.email }}>
                        <i class="bi bi-box-arrow-right"></i>
                        Salir {{ app.user.email }}
                    </a>
                {% else %}
                    <a href="{{ path('app_login') }}" class="btn btn-outline-success me-3" title="Entrar">
                        <i class="bi bi-box-arrow-in-right"></i>
                        Login
                    </a>
                {% endif %}

                <a href="{{ path('cart_index') }}" class="btn btn-outline-success position-relative" aria-label="Carrito de compras">
                    <i class="bi bi-cart"></i>
                    {% if cart_quantity > 0 %}
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            {{ cart_quantity }}
                            <span class="visually-hidden">Productos en el carrito</span>
                        </span>
                    {% endif %}
                </a>
            </div>
        </div>
    </nav>
{% endblock %}

