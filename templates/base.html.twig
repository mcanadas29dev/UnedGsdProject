    {% if is_granted('ROLE_USER') and not is_granted('ROLE_ADMIN') and not is_granted('ROLE_PICKER') %}
        <a href="{{ path('app_order_user') }}">üì¶ Pedidos</a>
    {% endif %}

    {% if is_granted('ROLE_PICKER') %}
        <a href="{{ path('app_order_storage') }}">üìã Gesti√≥n Almac√©n</a>
    {% endif %}

    {% if is_granted('ROLE_ADMIN') %}
