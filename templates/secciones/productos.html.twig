{# templates/secciones/productos.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Productos - {{ category.name }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('secciones_index') }}">Secciones</a>
            </li>
            {% if category.parent %}
                <li class="breadcrumb-item">
                    <a href="{{ path('secciones_show', {'slug': category.parent.slug}) }}">
                        {{ category.parent.name }}
                    </a>
                </li>
            {% endif %}
            <li class="breadcrumb-item active" aria-current="page">
                {{ category.name }}
            </li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                    <i class="fas fa-box-open me-2 text-primary"></i>
                    Productos de {{ category.name }}
                </h1>
                <div>
                    {% if category.parent %}
                        <a href="{{ path('secciones_show', {'slug': category.parent.slug}) }}" 
                           class="btn btn-outline-secondary me-2">
                            <i class="fas fa-arrow-left me-1"></i>Volver a {{ category.parent.name }}
                        </a>
                    {% endif %}
                    <a href="{{ path('secciones_index') }}" class="btn btn-outline-primary">
                        <i class="fas fa-home me-1"></i>Inicio
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Información de la categoría -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-info" role="alert">
                <i class="fas fa-info-circle me-2"></i>
                Mostrando {{ products|length }} producto{{ products|length != 1 ? 's' : '' }} 
                de la categoría <strong>{{ category.name }}</strong>
            </div>
        </div>
    </div>

    <!-- Lista de productos -->

        
    <div class="row">
        {% for product in products %}
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    {% if product.imageName %}
                        <img src="{{ asset('images/productos/' ~ product.imageName) }}" alt="Imagen de {{ product.name }}" class="img-fluid mb-4" />
                    {% else %}
                        <p><em>Sin imagen</em></p>
                    {% endif %}
                    {#
                    {% if product.imageName %}
                        <img src="{{ product.imageName }}" class="card-img-top" alt="{{ product.name }}" style="height: 200px; object-fit: cover;">
                    {% else %}
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="fas fa-image fa-3x text-muted"></i>
                        </div>
                    {% endif %}
                    #}
                    
                    <div class="card-body d-flex flex-column">
                        <h5 class="h3 card-title text-center">{{ product.name }}</h5>
                        
                        {% if product.description %}
                            <p class="card-text text-muted text-center">
                                {{ product.description|length > 100 ? product.description|slice(0, 100) ~ '...' : product.description }}
                            </p>
                        {% endif %}
                        
                        {% if product.price %}
                            <div class="mt-auto">
                                <p class="card-text text-center">
                                    <strong class="h3 text-success">{{ product.price }} €</strong>
                                </p>
                                <a href="{{ path('cart_add', {id: product.id}) }}"  class="btn btn-warning w-100">Añadir al carrito</a>
                            </div>
                        {% else %}
                            <div class="mt-auto">
                                <a href="{{ path('product_show', {'id': product.id}) }}" 
                                   class="btn btn-outline-primary w-100">
                                    <i class="fas fa-eye me-1"></i>Ver Detalles
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    No hay productos disponibles en esta categoría.
                </div>
                
                <div class="text-center mt-4">
                    <a href="{{ path('secciones_index') }}" class="btn btn-primary">
                        <i class="fas fa-arrow-left me-1"></i>Explorar Otras Secciones
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>

    <!-- Paginación (si es necesaria) -->
    {% if products|length > 12 %}
        <div class="row mt-4">
            <div class="col-12">
                <nav aria-label="Paginación de productos">
                    <ul class="pagination justify-content-center">
                        <!-- Aquí puedes añadir la lógica de paginación si la necesitas -->
                    </ul>
                </nav>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}