{% extends 'base.html.twig' %}

{% block title %}Tienda{% endblock %}

{% block breadcrumb %}
    {% set breadcrumb = [
        {'label': 'Inicio', 'url': path('app_home')},
        {'label': 'Tienda'}
    ] %}
    {% include 'components/_breadcrumb.html.twig' with {'items': breadcrumb} %}
{% endblock %}

{% block body %}

    <h1 class="mb-5 text-center fw-bold text-success">Nuestra Tienda</h1>

    <div class="row row-cols-1 row-cols-md-4 g-4">
        {% for product in products %}
            <div class="col">
                <div class="card h-100 shadow-sm rounded-3 border-0 product-card">
                    {% if product.imageName %}
                        <div class="text-center bg-light p-3">
                            <img src="{{ asset('images/productos/' ~ product.imageName) }}" 
                                 class="img-fluid product-image" 
                                 alt="{{ product.name }}">
                        </div>
                    {% endif %}
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-center text-success fw-semibold">{{ product.name }}</h5>
                        <p class="card-text text-center text-muted">{{ product.description|slice(0, 80) ~ '...' }}</p>
                        <h4 class="text-center text-primary mt-auto mb-3">{{ product.price|number_format(2, '.', ',') }} €</h4>

                        <form action="{{ path('cart_app_cart_add', {id: product.id}) }}" method="post">
                            <input type="hidden" name="quantity" value="1" />
                            <button class="btn btn-success w-100 fw-bold add-cart-btn">
                                <i class="bi bi-cart-plus me-1"></i> Añadir al carrito
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12 text-center">
                <p class="text-muted fs-5">Actualmente no hay productos disponibles.</p>
            </div>
        {% endfor %}
    </div>

{% endblock %}
