{% extends 'base.html.twig' %}

{% block title %}Lo más vendido{% endblock %}

{% block body %}
<h1 class="mb-4">Productos más vendidos</h1>

<div class="row row-cols-1 row-cols-md-4 g-4">
    {% for product in topProducts %}
        <div class="col">
            <div class="card h-100">
                {#<img src="{{ asset(product.imagePath) }}" class="card-img-top" alt="{{ product.name }}"> #}
                <div class="card-body">
                    <h5 class="card-title">{{ product.name }}</h5>
                    <p class="card-text fw-bold text-success">{{ product.totalSold|number_format(2, '.', ',') }} €</p>
                </div>
                <div class="card-footer text-center">
                    <a href="#" class="btn btn-sm btn-outline-primary">
                        Ver Producto
                    </a>
                </div>
            </div>
        </div>
    {% else %}
        <p>No hay productos vendidos aún.</p>
    {% endfor %}
</div>
{% endblock %}
