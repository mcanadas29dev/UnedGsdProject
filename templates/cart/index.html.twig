{% extends 'base.html.twig' %}

{% block title %}Tu carrito{% endblock %}

{% block body %}
<h1 class="mb-4">Carrito de compra</h1>

{% if cartItems is empty %}
    <p>No tienes productos en el carrito.</p>
    <a href="{{ path('app_home') }}" class="btn btn-warning mt-3">Seguir comprando</a>
  
{% else %}
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Precio</th>
                <th>Cantidad</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for item in cartItems %}
                <tr>
                    <td>{{ item.product.name }}</td>
                    <td>{{ item.product.price|number_format(2, ',', '.') }} €</td>
                    <td>{{ item.quantity }}</td>
                    <td>{{ item.total|number_format(2, ',', '.') }} €</td>
                    <td>
                        <a href="{{ path('cart_remove', {id: item.product.id}) }}" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3" class="text-end">Total:</th>
                <th>{{ total|number_format(2, ',', '.') }} €</th>
                <th></th>
            </tr>
        </tfoot>
    </table>

    <div class="d-flex justify-content-between">
        <a href="{{ path('cart_clear') }}" class="btn btn-outline-danger">Vaciar carrito</a>

        <a href="{{ path('cart_checkout') }}" class="btn btn-warning">Finalizar compra</a>
    </div>
{% endif %}
{% endblock %}
