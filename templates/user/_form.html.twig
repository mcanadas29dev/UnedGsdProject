{{ form_start(form) }}
    <div class="mb-3">
        {{ form_label(form.email, 'Correo electrónico', {'label_attr': {'class': 'form-label fw-bold text-success'}}) }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        {% if form_errors(form.email) %}
            <div class="text-danger small mt-1 alert alert-danger" role="alert">
                {{ form_errors(form.email) }}
            </div>
        {% endif %}
        
    </div>
    
    <div class="mb-3">
        {{ form_label(form.roles, 'Roles', {'label_attr': {'class': 'form-label fw-bold text-success'}}) }}
        {{ form_widget(form.roles, {'attr': {'class': 'form-select'}}) }}
        {{ form_errors(form.roles) }}
    </div>
    
    <div class="mb-3">
        {{ form_label(form.password, 'Contraseña', {'label_attr': {'class': 'form-label fw-bold text-success'}}) }}
        {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.password) }}
    </div>

    <div class="mb-3 form-check">
        {{ form_widget(form.isActive, {'attr': {'class': 'form-check-input'}}) }}
        {{ form_label(form.isActive, 'Usuario activo', {'label_attr': {'class': 'form-check-label fw-bold text-success'}}) }}
        {{ form_errors(form.isActive) }}
    </div>

    <div class="mb-3 form-check">
        {{ form_widget(form.isGoogleAuthenticatorEnabled, {'attr': {'class': 'form-check-input'}}) }}
        {{ form_label(form.isGoogleAuthenticatorEnabled, 'Autenticación 2FA activada', {'label_attr': {'class': 'form-check-label fw-bold text-success'}}) }}
        {{ form_errors(form.isGoogleAuthenticatorEnabled) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.googleAuthenticatorSecret, 'Secreto Google Authenticator', {'label_attr': {'class': 'form-label fw-bold text-success'}}) }}
        {{ form_widget(form.googleAuthenticatorSecret, {'attr': {'class': 'form-control', 'readonly': 'readonly'}}) }}
        {{ form_errors(form.googleAuthenticatorSecret) }}
    </div>
    
    <div class="mb-3">
        {{ form_label(form.backupCodes, 'Secreto Google Authenticator', {'label_attr': {'class': 'form-label fw-bold text-success'}}) }}
        {{ form_widget(form.backupCodes, {'attr': {'class': 'form-control', 'readonly': 'readonly'}}) }}
        {{ form_errors(form.backupCodes) }}
    </div>
    <hr/>
    <div class="d-flex justify-content-between">
        <button class="btn btn-outline-success">
            <i class="bi bi-check-circle"></i> {{ button_label|default('Guardar') }}
        </button>
       

        {#  {{ include('user/_delete_form.html.twig', {'button_label': 'Eliminar'} ) }} #}
        <a href="{{ path('app_user_index') }}" class="btn btn-outline-secondary rounded-1">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>

{{ form_end(form) }}
