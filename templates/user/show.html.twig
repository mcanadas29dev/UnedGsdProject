{% extends 'base.html.twig' %}

{% block title %}Usuario #{{ user.id }} - GreenHarvest{% endblock %}

{% block body %}
<div class="container py-5">
    <!-- Encabezado -->
    <div class="text-center mb-4">
        <h1 class="fw-bold text-success">ðŸ‘¤ Usuario #{{ user.id }}</h1>
        <p class="text-muted">Detalles del usuario en la plataforma</p>
    </div>

    <!-- Tarjeta con la informaciÃ³n -->
    <div class="card shadow rounded-4 mb-4">
        <div class="card-body">
            <table class="table table-borderless align-middle mb-0">
                <tbody>
                    <tr>
                        <th class="text-success" style="width: 150px;">ðŸ“Œ ID</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th class="text-success">ðŸ“§ Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th class="text-success">ðŸ”‘ Roles</th>
                        <td>
                            {% if user.roles %}
                                <ul class="list-inline mb-0">
                                    {% for role in user.roles %}
                                        <li class="list-inline-item">
                                            <span class="badge bg-success">{{ role }}</span>
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% else %}
                                <span class="text-muted">Sin roles asignados</span>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th class="text-success">ðŸ”’ Password</th>
                        <td><code class="text-muted">{{ user.password }}</code></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Botones de acciones -->
    <div class="d-flex gap-2">
        <a href="{{ path('app_user_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Volver a la lista
        </a>

        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-outline-primary">
            <i class="bi bi-pencil-square"></i> Editar
        </a>

        {{ include('user/_delete_form.html.twig', { button_label: 'Eliminar' }) }}
    </div>
</div>
{% endblock %}
