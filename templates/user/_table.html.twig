{# ==========================================================
   SUBVISTA: templates/user/_table.html.twig
   DESCRIPCI√ìN:
     Muestra los resultados del listado o b√∫squeda de usuarios.
     Se actualiza din√°micamente mediante peticiones AJAX.
   ========================================================== #}

{% if users is empty %}
  <div class="alert alert-info shadow-sm rounded-0 text-center">
      No hay usuarios que coincidan con tu b√∫squeda.
  </div>
{% else %}
  <div class="card border-0 rounded-4">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover align-middle mb-0 ">
          <thead class="">
            <tr>
             
              <th>EMAIL</th>
              <th>ROLES</th>
              <th>ESTADO</th>
              <th>PASSWORD (hash)</th>
              <th>2FA</th>
              <th class="text-center">Acciones</th>
 
            </tr>
          </thead>
          <tbody>
            {% for user in users %}
              <tr>
                
                <td>{{ user.email }}</td>
                <td>
                  {% for role in user.roles %}
                    <span class="badge bg-success-subtle text-success border">{{ role }}</span>
                  {% else %}
                    <span class="text-muted">Sin roles</span>
                  {% endfor %}
                </td>
                <td>
                  {% if user.isActive %}
                      <span class="badge bg-success">Activo</span>
                  {% else %}
                      <span class="badge bg-danger">Inactivo</span>
                  {% endif %}
                </td>
                <td>
                  <code class="text-muted small">{{ user.password|slice(0,20) ~ '...' }}</code>
                </td>
                <td>
                  {% if user.isGoogleAuthenticatorEnabled %}
                    <span class="text-muted">Si</span>
                  {% else %}
                    No 
                  {% endif %}
                </td>

                <td class="text-center">
                      <div class="btn-group dropup" role="group">
                      <div class="dropdown dropstart">
                                        <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                        +
                                        </button>
                                        <ul class="dropdown-menu">
                                      
                                        <li><a class="dropdown-item text-muted" href="{{ path('app_user_show', {'id': user.id}) }}"  ><i class="bi bi-eye"></i> Ver</a></li>
                                        <li><a class="dropdown-item text-muted" href="{{ path('app_user_edit', {'id': user.id}) }}" > <i class="bi bi-pencil-square"></i> Editar</a></li>
                                        <li>
                                            <button type="button" 
                                                class="dropdown-item text-danger" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#deleteUserModal{{ user.id }}">
                                                <i class="bi bi-trash"></i> Eliminar
                                            </button>
                                        </li>
                                        </ul>
                        </div>
                      </div>

                </td>
              </tr>
            {% else %}
              <tr>
                <td colspan="5" class="text-center text-muted py-0 rounded-0">
                  No hay usuarios registrados.
                </td>
              </tr>
            {% endfor %}

          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="mt-4">
    <nav aria-label="Page navigation">
      <div class="d-flex justify-content-center">
        {{ knp_pagination_render(users, '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig') }}
      </div>
    </nav>
  </div>

   <!-- üîΩ BLOQUE DE MODALES (fuera de la tabla) -->
  {% for user in users %}
      {{ include('user/_delete_form.html.twig', {'user': user, 'id': user.id}) }}
  {% endfor %}
{% endif %}
