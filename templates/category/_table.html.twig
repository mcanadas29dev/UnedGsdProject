{% if categories is empty %}
    <div class="alert alert-info shadow-sm rounded-0 text-center">
        No hay categor√≠as que coincidan con tu b√∫squeda.
    </div>
{% else %}
<div class="card border-0 rounded-4">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="">
                    <tr>
                        <th>ID</th>
                        <th>NOMBRE CATEGORIA</th>
                        <th>SLUG - (URL SEO)</th>
                        <th>CATEGORIA PADRE</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.name }}</td>
                        <td>{{ category.slug }}</td>
                        <td>{{ category.parent ? category.parent.name : '-' }}</td>
                        <td class="text-center">
                            <div class="btn-group dropup">
                                <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                    +
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item text-muted" href="{{ path('categories_show', {id: category.id}) }}"><i class="bi bi-eye"></i> Ver</a></li>
                                    <li><a class="dropdown-item text-muted" href="{{ path('categories_edit', {id: category.id}) }}"><i class="bi bi-pencil-square"></i> Editar</a></li>
                                    {#
                                    <form method="post" action="{{ path('categories_delete', {id: category.id}) }}" onsubmit="return confirm('¬øSeguro que quieres eliminar esta categor√≠a?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                        <li><button class="dropdown-item text-muted"><i class="bi bi-trash"></i> Borrar</button></li>
                                    </form>
                                    #}
                                     <li>
                                                <button type="button" 
                                                        class="dropdown-item text-danger" 
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#deleteCategorieModal{{ category.id }}">
                                                    <i class="bi bi-trash"></i> Eliminar
                                                </button>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="alert alert-info shadow-sm rounded-0 text-center">
                            No hay categor√≠as disponibles.
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<nav aria-label="Page navigation" class="mt-4">
    <div class="d-flex justify-content-center">
        {{ knp_pagination_render(categories, '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig') }}
    </div>
</nav>

<!-- üîΩ BLOQUE DE MODALES (fuera de la tabla) -->
