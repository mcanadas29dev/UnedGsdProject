{% extends 'base.html.twig' %}

{% block title %}Editar Categoría - GreenHarvest{% endblock %}

{% block breadcrumb %}
    {% set breadcrumb = [
        {'label': 'Inicio', 'url': path('app_home')},
        {'label': 'Categorías', 'url': path('categories_list')},
        {'label': 'Editar Categoría'},
        
    ] %}
    {% include 'components/_breadcrumb.html.twig' with {'items': breadcrumb} %}
{% endblock %}


{% block body %}

    <!-- Encabezado -->
    <div class="text-center mb-5">
        <h1 class="fw-bold text-success">Editar Categoría: "{{ category.name }}"</h1>
        <p class="text-muted">Modifica los datos de la categoría en el sistema</p>
    </div>

    <!-- Formulario -->
    <div class="card shadow rounded-4 p-4">
        {{ form_start(form) }}
            <div class="row g-3">
                {% for field in form %}
                    <div class="col-12">
                        {{ form_label(field, null, {'label_attr': {'class': 'form-label fw-bold text-success'}}) }}
                        {% if field.vars.block_prefixes|last == 'choice' %}
                            {{ form_widget(field, {'attr': {'class': 'form-select rounded-1 shadow-sm'}}) }}
                        {% else %}
                            {{ form_widget(field, {'attr': {'class': 'form-control rounded-1 shadow-sm'}}) }}
                        {% endif %}
                        {{ form_errors(field) }}
                    </div>
                {% endfor %}
            </div>

            <!-- Botones -->
            <div class="mt-4 d-flex justify-content-between">
                <a href="{{ path('categories_list') }}" class="btn btn-outline-secondary rounded-1">
                    <i class="bi bi-arrow-left"></i> Volver al listado
                </a>
                <button class="btn btn-outline-success rounded-1">
                    <i class="bi bi-save"></i> Actualizar
                </button>
            </div>
        {{ form_end(form) }}
    </div>

{% endblock %}

