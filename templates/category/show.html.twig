{% extends 'base.html.twig' %}

{% block title %}Detalles de Categoría - GreenHarvest{% endblock %}

{% block breadcrumb %}
    {% set breadcrumb = [
        {'label': 'Inicio', 'url': path('app_home')},
        {'label': 'Categorías', 'url': path('categories_list')},
        {'label': 'Ver Categoría'},
    ] %}
    {% include 'components/_breadcrumb.html.twig' with {'items': breadcrumb} %}
{% endblock %}


{% block body %}

    <!-- Encabezado -->
    <div class="text-center mb-5">
        <h1 class="fw-bold text-success">Detalles de la Categoría: "{{ category.name }}"</h1>
        <p class="text-muted">Información detallada de la categoría en el sistema</p>
    </div>

    <!-- Card con detalles -->
    <div class="card shadow rounded-4 p-4">
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>ID:</strong> {{ category.id }}</li>
            <li class="list-group-item"><strong>Nombre:</strong> {{ category.name }}</li>
            <li class="list-group-item"><strong>Slug:</strong> {{ category.slug }}</li>
            <li class="list-group-item"><strong>Padre:</strong> {{ category.parent ? category.parent.name : '-' }}</li>
        </ul>

        <!-- Botones -->
        <div class="mt-4 d-flex justify-content-between">
            <a href="{{ path('categories_list') }}" class="btn btn-outline-secondary rounded-1">
                <i class="bi bi-arrow-left"></i> Volver al listado
            </a>
            <div>
                <a href="{{ path('categories_edit', {id: category.id}) }}" class="btn btn-outline-primary rounded-1 me-2">
                    <i class="bi bi-pencil-square"></i> Editar
                </a>
                <a href="{{ path('categories_delete', {id: category.id}) }}" class="btn btn-outline-danger rounded-1 me-2">
                    <i class="bi bi-pencil-square"></i> Eliminar
                </a>
                {# {{ include('categories/_delete_form.html.twig', {'category': category}) }} #}
            </div>
        </div>
    </div>

{% endblock %}
