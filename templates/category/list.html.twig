{% extends 'base.html.twig' %}

{% block title %}Listado de Categorías{% endblock %}

{% block body %}
<h1 class="mb-4">Categorías</h1>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="find_categorie" class="form-control" placeholder="Buscar categoría" value="{{ find_categorie }}">
        <button class="btn btn-outline-secondary" type="submit">Buscar</button>
    </div>
</form>

<a href="{{ path('categories_new') }}" class="btn btn-primary mb-3">Nueva Categoría</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Slug</th>
            <th>Padre</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.slug }}</td>
                <td>{{ category.parent ? category.parent.name : '-' }}</td>
                <td>
                    <a href="{{ path('categories_show', {id: category.id}) }}" class="btn btn-sm btn-info">Ver</a>
                    <a href="{{ path('categories_edit', {id: category.id}) }}" class="btn btn-sm btn-warning">Editar</a>
                    <form method="post" action="{{ path('categories_delete', {id: category.id}) }}" style="display:inline-block;" onsubmit="return confirm('¿Seguro que quieres eliminar esta categoría?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                        <button class="btn btn-sm btn-danger">Eliminar</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No hay categorías.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{# Paginación centrada con Bootstrap personalizada #}
{% if categories is not empty %}
    <nav aria-label="Page navigation" class="mt-4">
        <div class="d-flex justify-content-center">
            {{ knp_pagination_render(categories, '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig', {
                'prev_message': '<i class="bi bi-arrow-left"></i> Anterior',
                'next_message': 'Siguiente <i class="bi bi-arrow-right"></i>'
            }) }}
        </div>
    </nav>
{% endif %}
{% endblock %}
