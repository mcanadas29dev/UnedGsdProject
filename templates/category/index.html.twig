<ul>
    {% for category in categories %}
        <li>
            {{ category.name }}
            {% if category.children|length > 0 %}
                <ul>
                    {% for child in category.children %}
                        <li>{{ child.name }}</li>
                    {% endfor %}
                </ul>
            {% endif %}
        </li>
    {% endfor %}
</ul>
