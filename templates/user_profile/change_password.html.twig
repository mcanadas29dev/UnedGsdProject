{% extends 'base.html.twig' %}

{% block title %}Cambiar contraseña | GreenHarvest{% endblock %}

{% block body %}


<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}
            {% endfor %}
            <div class="card shadow-lg border-0 rounded-0">
                <div class="card-header bg-secondary text-white text-center rounded-top-0">
                    <h4 class="text-white">Actualizar contraseña</h4>
                </div>

                <div class="card-body p-4">
                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label == 'error' ? 'danger' : (label == 'success' ? 'success' : 'info') }} alert-dismissible fade show mb-3" role="alert">
                                {{ message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}
                    {% endfor %}

                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.currentPassword, null, {'label_attr': {'class': 'form-label fw-semibold text-success'}}) }}
                            {{ form_widget(form.currentPassword, {'attr': {'class': 'form-control rounded-3 border-success-subtle'}}) }}
                            {{ form_errors(form.currentPassword) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.newPassword.first, null, {'label_attr': {'class': 'form-label fw-semibold text-success'}}) }}
                            {{ form_widget(form.newPassword.first, {'attr': {'class': 'form-control rounded-3 border-success-subtle'}}) }}
                            {{ form_errors(form.newPassword.first) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.newPassword.second, null, {'label_attr': {'class': 'form-label fw-semibold text-success'}}) }}
                            {{ form_widget(form.newPassword.second, {'attr': {'class': 'form-control rounded-3 border-success-subtle'}}) }}
                            {{ form_errors(form.newPassword.second) }}
                        </div>

                       
                    {{ form_end(form) }}
                </div>

                <div class="card-footer text-center bg-light rounded-bottom-4">
                    <a href="{{ path('app_home') }}" class="btn btn-outline-secondary stext-success text-decoration-none fw-semibold">
                        <i class="bi bi-arrow-left"></i> Volver al perfil
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
{#
    body {
        background: linear-gradient(135deg, #e8f5e9, #f1f8e9);
        font-family: 'Inter', sans-serif;
    }
    .card {
        border: 1px solid #c8e6c9;
    }
    .form-control:focus {
        border-color: #66bb6a;
        box-shadow: 0 0 0 0.2rem rgba(102, 187, 106, 0.25);
    }
    .btn-success {
        background-color: #43a047;
        border: none;
    }
    .btn-success:hover {
        background-color: #388e3c;
    }
    #}
</style>
{% endblock %}
