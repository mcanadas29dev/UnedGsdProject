{% extends 'base.html.twig' %}

{% block title %}Detalle del Estado de Pedido - GreenHarvest{% endblock %}

{% block breadcrumb %}
    {% set breadcrumb = [
        {'label': 'Inicio', 'url': path('app_home')},
        {'label': 'Estados de Pedido', 'url': path('app_order_status_index')},
        {'label': 'Detalle'}
    ] %}
    {% include 'components/_breadcrumb.html.twig' with {'items': breadcrumb} %}
{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow border-0 rounded-1">
                <div class="card-body p-4">
                    <h1 class="h4 text-success fw-bold mb-4">
                        Detalle del Estado de Pedido
                    </h1>

                    <table class="table table-borderless align-middle">
                        <tbody>
                            <tr>
                                <th class="text-success w-25">ID</th>
                                <td>{{ order_status.id }}</td>
                            </tr>
                            <tr>
                                <th class="text-success">Nombre</th>
                                <td>{{ order_status.name }}</td>
                            </tr>
                        </tbody>
                    </table>

                    <hr class="my-4"/>

                    <div class="d-flex justify-content-between">
 
                        <a href="{{ path('app_order_status_edit', {'id': order_status.id}) }}" class="btn btn-outline-success rounded-1">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                        <div class="d-flex gap-2">
                            <a href="{{ path('app_order_status_index') }}" class="btn btn-outline-secondary rounded-1">
                                <i class="bi bi-arrow-left"></i> Volver
                            </a>

                            {# {{ include('order_status/_delete_form.html.twig') }} #}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
