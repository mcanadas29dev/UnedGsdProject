{% extends 'base.html.twig' %}

{% block title %}Estados de pedido - GreenHarvest{% endblock %}

{% block breadcrumb %}
    {% set breadcrumb = [
        {'label': 'Inicio', 'url': path('app_home')},
        {'label': 'Estados de Pedido'}
    ] %}
    {% include 'components/_breadcrumb.html.twig' with {'items': breadcrumb} %}
{% endblock %}

{% block body %}
<div class="">
    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="h4 fw-bold text-secondary mb-0">Estados de Pedidos</h4>
    </div>

    <!-- Buscador -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <form method="get" 
            action="{{ path('app_order_status_index') }}" 
            class="mb-1">
            <div class="input-group">
                <input type="text" name="find_orderStatus" 
                    id="estadoSearch"
                    value="{{ find_orderStatus|default('') }}" 
                    {# value="{{ app.request.get('q') }}" #}
                    class="form-control" 
                    placeholder="Buscar por nombre..." aria-label="Buscar estado">
                <button class="btn btn-outline-secondary disabled rounded-0" >
                    <i class="bi bi-search"></i> 
                </button>
            </div>
        </form>

        <a href="{{ path('app_order_status_new') }}" class="btn btn-sm btn-outline-success ">
            <i class="bi bi-plus-circle"></i> AÃ±adir estado
        </a>
    </div>

    <!-- Tabla -->
 

    <div id="searchResults">
        {% include 'order_status/_table.html.twig' with {'order_statuses': order_statuses} %}
    </div>

</div>
{% endblock %}
{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('js/modules/orderStatus_Search.js') }}"></script>
{% endblock %}

