{% extends 'base.html.twig' %}

{% block title %}{{ form_title }} - GreenHarvest{% endblock %}

{% block body %}
<div class="container py-5">
    <!-- Encabezado -->
    <div class="text-center mb-4">
        <h1 class="fw-bold text-success">{{ form_title }}</h1>
        <p class="text-muted">Gestiona los productos de tu plataforma</p>
    </div>

    <!-- Formulario -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow rounded-4 mb-4">
                <div class="card-body p-4">
                    {{ form_start(form) }}
                        <!-- Renderizar todos los campos del formulario con estilo -->
                        {% for child in form.children %}
                            {% if child.vars.name != '_token' %}
                                <div class="mb-3">
                                    {% if child.vars.block_prefixes[1] == 'choice' and child.vars.expanded %}
                                        <!-- Para checkboxes/radios expandidos -->
                                        {{ form_label(child, null, {'label_attr': {'class': 'form-label fw-bold text-success'}}) }}
                                        <div class="form-check-container">
                                            {{ form_widget(child, {'attr': {'class': 'form-check-input'}}) }}
                                        </div>
                                    {% elseif child.vars.block_prefixes[1] == 'checkbox' %}
                                        <!-- Para checkbox individual -->
                                        <div class="form-check">
                                            {{ form_widget(child, {'attr': {'class': 'form-check-input'}}) }}
                                            {{ form_label(child, null, {'label_attr': {'class': 'form-check-label fw-bold text-success'}}) }}
                                        </div>
                                    {% elseif child.vars.block_prefixes[1] == 'choice' %}
                                        <!-- Para selects -->
                                        {{ form_label(child, null, {'label_attr': {'class': 'form-label fw-bold text-success'}}) }}
                                        {{ form_widget(child, {'attr': {'class': 'form-select'}}) }}
                                    {% elseif child.vars.block_prefixes[1] == 'textarea' %}
                                        <!-- Para textareas -->
                                        {{ form_label(child, null, {'label_attr': {'class': 'form-label fw-bold text-success'}}) }}
                                        {{ form_widget(child, {'attr': {'class': 'form-control', 'rows': '4'}}) }}
                                    {% elseif child.vars.block_prefixes[1] == 'file' %}
                                        <!-- Para campos de archivo -->
                                        {{ form_label(child, null, {'label_attr': {'class': 'form-label fw-bold text-success'}}) }}
                                        {{ form_widget(child, {'attr': {'class': 'form-control'}}) }}
                                    {% else %}
                                        <!-- Para inputs normales (text, email, number, etc.) -->
                                        {{ form_label(child, null, {'label_attr': {'class': 'form-label fw-bold text-success'}}) }}
                                        {{ form_widget(child, {'attr': {'class': 'form-control'}}) }}
                                    {% endif %}
                                    
                                    <!-- Mostrar errores si existen -->
                                    {% if form_errors(child) %}
                                        <div class="text-danger small mt-1 alert alert-danger" role="alert">
                                            {{ form_errors(child) }}
                                        </div>
                                    {% endif %}
                                </div>
                            {% endif %}
                        {% endfor %}

                        <div class="d-flex justify-content-center">
                            <button class="btn btn-outline-success rounded-1">
                                <i class="bi bi-check-circle"></i> Guardar
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>

            <!-- Acciones -->
            <div class="d-flex justify-content-center">
                <a href="{{ path('product_index') }}" class="btn btn-outline-secondary rounded-1">
                    <i class="bi bi-arrow-left"></i> Volver al listado
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}