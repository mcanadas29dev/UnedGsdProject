{% if products is empty %}
    <div class="alert alert-info shadow-sm rounded-0 text-center">
        No hay productos que coincidan con tu b√∫squeda.
    </div>
{% else %}

<div class="card border-0 rounded-4">
    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0 ">
            <thead class="">
                <tr>
                    <th>ID</th>
                    <th>NOMBRE</th>
                    <th>PRECIO ‚Ç¨ (IVA incl.)</th>
                    <th>CATEGORIA</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price|number_format(2, ',', '.') }} ‚Ç¨</td>
                    <td>{{ product.category.name|default('Sin categor√≠a') }}</td>
                    <td class="text-center">
                        <div class="btn-group dropup">
                            <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">+</button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item text-muted" href="{{ path('product_show', {'id': product.id}) }}"><i class="bi bi-eye"></i> Ver</a></li>
                                <li><a class="dropdown-item text-muted" href="{{ path('product_edit', {'id': product.id}) }}"><i class="bi bi-pencil-square"></i> Editar</a></li>
                                {# {{ include('product/_delete_form.html.twig', {'product': product}) }} #}
                                <li>
                                    <button type="button" 
                                        class="dropdown-item text-danger" 
                                        data-bs-toggle="modal" 
                                        data-bs-target="#deleteProductModal{{ product.id }}">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </button>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
 
                    <td colspan="5" class="alert alert-info shadow-sm rounded-0 text-center">
                        No hay productos disponibles.
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>


    <nav aria-label="Page navigation" class="mt-4">
        <div class="d-flex justify-content-center">
            <ul class="pagination pagination-sm">
            {{ knp_pagination_render(products, '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig') }}
            </ul>
        </div>
    </nav>
