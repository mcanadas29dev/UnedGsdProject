{% extends 'base.html.twig' %}

{% block title %}Productos - GreenHarvest{% endblock %}

{% block body %}
<div class="container py-5">
    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-success fw-bold mb-0">ðŸ“¦ Listado de Productos</h1>
        <a href="{{ path('product_new') }}" class="btn btn-success btn-sm rounded-1 shadow-sm">
            <i class="bi bi-plus-circle"></i> AÃ±adir producto
        </a>
    </div>

    <!-- Tabla -->
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-success text-success">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Precio (IVA incl.)</th>
                        <th scope="col">CategorÃ­a</th>
                        <th scope="col" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                {% for product in products %}
                    <tr>
                        <td class="fw-bold">{{ product.id }}</td>
                        <td>{{ product.name }}</td>
                        <td>{{ product.price|number_format(2, ',', '.') }} â‚¬</td>
                        <td>{{ product.category.name }}</td>
                      
                        <td class="text-center">
                            <a href="{{ path('product_show', {'id': product.id}) }}" 
                               class="btn btn-outline-success rounded-1 me-1" title="Ver">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a href="{{ path('product_edit', {'id': product.id}) }}" 
                               class="btn btn-outline-primary rounded-1 me-1" title="Editar">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            {{ include('product/_delete_form.html.twig', {'product': product}) }}
                            <a href="{{ path('cart_add', {id: product.id}) }}" 
                               class="btn btn-outline-warning rounded-1 ms-1" title="AÃ±adir al carrito">
                                <i class="bi bi-cart-plus"></i>
                            </a>
                        </td>


                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center text-muted py-4">
                            No hay productos disponibles.
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <!-- PaginaciÃ³n -->
    {% if products is not empty %}
        <nav aria-label="Page navigation" class="mt-4">
            <div class="d-flex justify-content-center">
                {{ knp_pagination_render(products, '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig', {
                    'prev_message': '<i class="bi bi-arrow-left"></i> Anterior',
                    'next_message': 'Siguiente <i class="bi bi-arrow-right"></i>'
                }) }}
            </div>
        </nav>
    {% endif %}
</div>
{% endblock %}
