{% extends 'base.html.twig' %}

{% block title %}Productos - GreenHarvest{% endblock %}

{% block breadcrumb %}
    {% set breadcrumb = [
        {'label': 'Inicio', 'url': path('app_home')},
        {'label': 'Productos', 'url': path('product_index')}
    ] %}
    {% include 'components/_breadcrumb.html.twig' with {'items': breadcrumb} %}
{% endblock %}


{% block body %}
<div class="">

    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="h4 text-secondary fw-bold mb-0">Productos</h4>
       
    </div>

    <!-- Buscador -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <form method="get" action="{{ path('product_index') }}" class="mb-1">
            <div class="input-group">
                <input type="text" name="q" value="{{ search }}" class="form-control" id="productSearch"
                    placeholder="Buscar por nombre..." aria-label="Buscar producto">
                <button class="btn btn-outline-secondary disabled rounded-0" type="submit">
                    <i class="bi bi-search"></i> 
                </button>
            </div>
        </form>
         <a href="{{ path('product_new') }}" class="btn btn-outline-success ">
            <i class="bi bi-plus-circle"></i> AÃ±adir producto
        </a>
    </div>
 
     <div id="searchResults">
        {% include 'product/_table.html.twig' with {'products': products} %}
    </div>

</div>
{% endblock %}



