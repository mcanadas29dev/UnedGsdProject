{% extends 'base.html.twig' %}

{% block title %}{{ form_title }} - GreenHarvest{% endblock %}

{% block breadcrumb %}
    {% set breadcrumb = [
        {'label': 'Inicio', 'url': path('app_home')},
        {'label': 'Productos', 'url': path('product_index')},
        {'label': 'Editar Producto'}
    ] %}
    {% include 'components/_breadcrumb.html.twig' with {'items': breadcrumb} %}
{% endblock %}


{% block body %}

    <div class="text-center mb-5">
        <h1 class="fw-bold text-success">{{ form_title }}</h1>
        <p class="text-muted">Completa los datos del producto para guardarlo en el sistema</p>
    </div>

    {% if form.vars.value.imageName %}
        <div class="mb-4 text-center">
            <label class="fw-bold d-block mb-2 text-success">Imagen actual:</label>
            <img src="{{ asset('images/productos/' ~ form.vars.value.imageName) }}" 
                 alt="Imagen del producto" 
                 class="img-thumbnail shadow-sm rounded-3" 
                 style="max-width: 250px;">
        </div>
    {% endif %}

    <div class="card border-0 shadow rounded-3 p-4">
        {{ form_start(form) }}
            <div class="row g-3">
                {% for field in form %}
                    <div class="col-12">
                        {{ form_label(field, null, {'label_attr': {'class': 'form-label fw-bold text-success'}}) }}
                        {% if field.vars.block_prefixes|last == 'choice' %}
                            {{ form_widget(field, {'attr': {'class': 'form-select rounded-1 shadow-sm'}}) }}
                        {% else %}
                            {{ form_widget(field, {'attr': {'class': 'form-control rounded-1 shadow-sm'}}) }}
                        {% endif %}
                        {{ form_errors(field) }}
                    </div>
                {% endfor %}
            </div>

            <div class="mt-4 d-flex justify-content-between">
                
                <button class="btn btn-outline-success rounded-1">
                    <i class="bi bi-save"></i> Guardar
                </button>
                <a href="{{ path('product_index') }}" class="btn btn-outline-secondary rounded-0">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>
        {{ form_end(form) }}
    </div>

{% endblock %}
