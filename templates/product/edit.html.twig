{% extends 'base.html.twig' %}

{% block title %}{{ form_title }}{% endblock %}

{% block body %}
<h1 class="mb-4">{{ form_title }}</h1>

{% if form.vars.value.imageName %}
    <div class="mb-4">
        <label>Imagen actual:</label><br>
        <img src="{{ asset('images/productos/' ~ form.vars.value.imageName) }}" alt="Imagen del producto" class="img-thumbnail" style="max-width: 300px;">
    </div>
{% endif %}

{{ form_start(form) }}
    {{ form_widget(form) }}
    
    <button class="btn btn-success mt-3">
        <i class="bi bi-save"></i> Guardar
    </button>
{{ form_end(form) }}




<a href="{{ path('product_index') }}" class="btn btn-link mt-3">
    <i class="bi bi-arrow-left"></i> Volver al listado
</a>
{% endblock %}
