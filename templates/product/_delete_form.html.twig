<form method="post" action="{{ path('product_delete', {'id': product.id}) }}" onsubmit="return confirm('¿Estás seguro de eliminar este producto?');" class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
    <button class="btn btn-sm btn-danger">
        <i class="bi bi-trash"></i>
    </button>
</form>
